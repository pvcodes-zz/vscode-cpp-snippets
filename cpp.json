{
	"c++ Biolerplate": {
	  "prefix": "!cpp",
	  "body": [
		"#include <iostream>\n",
		"int main()\t{",
		"\t${0}",
		"\treturn 0;",
		"}"
	  ],
	  "description": "C++ Boilder plate"
	},
	"cout": {
	  "prefix": "!cout",
	  "body": "std::cout << ${0:statement} << std::endl;",
	  "description": "Make the cout statement"
	},
	"cin": {
	  "prefix": "!cin",
	  "body": "std::cin >> ${0:var_name};",
	  "description": "Make the cin statement"
	},
	"std::string": {
	  "prefix": "!string",
	  "body": "std::string ${1:var_name}= \"${0:var_value}\";",
	  "description": "Makes the std::string statement"
	},
	"class": {
	  "prefix": "!class",
	  "body": [
		"class ${1:ClassName} {",
		"\tprivate:",
		"\t\t${2:Your Code}",
		"\tpublic:",
		"\t\t${1:ClassName}(){",
		"\t\t\t${3:Your Code}",
		"\t\t}",
		"\t\t~${1:ClassName}(){",
		"\t\t\t${4:Your Code}",
		"\t\t}",
		"${0:SomethingElse}",
		"};"
	  ]
	},
	"forloop": {
	  "prefix": "!for",
	  "body": [
		"for(int ${1:i}; ${1:i}<${2:Value}; ${1:i}++) {",
		"\t${0://Your Code}",
		"}"
	  ]
	},
	"include": {
	  "prefix": "!include",
	  "body": "#include ${0:Header.h}"
	},
	"vector": {
	  "prefix": "!vector",
	  "body": "std::vector<${1:TypeName}> ${2:VariableName} = ${0:values};"
	}
  }
  